<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Create a new comment for <%= thing.name %></h1>
    <div class="centerText">
        <form action="/things/<%= thing._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/things">Go back</a>
    </div>
</div>

<% include ../partials/footer %>