<% include ../partials/header %>

<div class="row">
    <div class="centerText panel panel-default">
        <div class="panel-body">
            <h1 style="text-align: center">Add a New Thing</h1>
            <hr>
            <form action="/things" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Thing Title" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Thing Image URL" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Thing Description" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Where is this Thing located? I.E. Toronto, ON">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>
            <a href="/things">Go back</a>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>