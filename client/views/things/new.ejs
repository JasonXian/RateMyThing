<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Create a new thing post!</h1>
    <div class="centerText">
        <form action="/things" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Thing Title">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Thing Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Thing Description">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="location" placeholder="Where is this Thing located? I.E. Toronto, ON">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/things">Go back</a>
    </div>
</div>
    
<% include ../partials/footer %>