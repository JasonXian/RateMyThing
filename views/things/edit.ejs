<% include ../partials/header %>

<div class="row">
    <div class="centerText panel panel-default">
        <div class="panel-body">
            <h1 style="text-align: center">Edit <%= thing.name %></h1>
            <hr>
            <form action="/things/<%= thing._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[name]" value="<%= thing.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[description]" value="<%= thing.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[location]" value="<%= thing.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/things/<%= thing._id %>">Go back</a>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>