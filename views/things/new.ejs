<% include ../partials/header %>

<div class="row">
    <div class="centerText panel panel-default">
        <div class="panel-body">
            <h1 style="text-align: center">Add a New Thing</h1>
            <hr>
            <form action="/things" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[name]" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[description]" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[location]" placeholder="Location of thing, I.E. Toronto, ON">
                </div>
                <div class="form-group">
                    <label class="btn btn-info">
                        Upload Image<input type="file" id="image" name="image" accept="image/*" style="display: none;" onchange="$('#upload-info').html(this.files[0].name)" required>
                    </label>
                    <span class='label label-info' id="upload-info"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>